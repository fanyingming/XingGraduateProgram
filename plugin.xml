<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="edu.buaa.actionSet">
         <menu
               label="Simulator"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="Run"
               icon="icons/heart.png"
               class="edu.buaa.actions.SampleAction"
               tooltip="simulate DDS model"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="edu.buaa.actions.SampleAction">
         </action>
         <action
               label="About"
               icon="icons/heart.png"
               class="edu.buaa.actions.AboutAction"
               tooltip="About simulate DDS model"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="edu.buaa.actions.AboutAction">
         </action>
      </actionSet>
   </extension>

</plugin>
